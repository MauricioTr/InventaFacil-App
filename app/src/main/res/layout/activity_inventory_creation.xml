<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryCreationActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_inventory_creation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <TextView
        android:id="@+id/tv_inventory_creation_name_tag"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Nombre de inventario:"
        android:textSize="26dp"/>

    <EditText
        android:id="@+id/et_inventory_creation_inventory_name"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="35dp"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_inventory_creation_depot_tag"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Sucursal:"
        android:textSize="26dp"/>

    <Spinner
        android:id="@+id/sp_inventory_creation_depot_dropdown"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/tv_inventory_creation_section_tag"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Seccion:"
        android:textSize="26dp"/>

    <Spinner
        android:id="@+id/sp_inventory_creation_section_dropdown"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_inventory_creation_create_inventory"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:text="Crear inventario"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:onClick="generateNewInventory"/>
</LinearLayout>