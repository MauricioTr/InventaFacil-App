<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <Button
        android:id="@+id/btn_inventory_item_delete_item"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:backgroundTint="#cc0000"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="X"
        android:textColor="#e6e6e6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_inventory_item_description"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:maxWidth="260dp"
        android:maxLines="2"
        android:text="tesasdadsasdadaasdasdasdasdsadasdasdasd"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_inventory_item_delete_item"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_inventory_item_quantity_field"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="test"
        android:textSize="25dp"
        android:inputType="number"
        android:maxLength="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>